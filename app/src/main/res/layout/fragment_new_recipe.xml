<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRecipeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_new_recipe_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_new_recipe_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:id="@+id/new_recipe_form_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_recipe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/new_recipe_form_name"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"

        android:textSize="25sp"

        app:layout_constraintVertical_chainStyle="spread"
        />

    <EditText
        android:id="@+id/new_recipe_form_name"
        android:hint="@string/name"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_form_text_view"
        app:layout_constraintBottom_toTopOf="@+id/new_recipe_form_time"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:id="@+id/new_recipe_form_time"
        android:hint="@string/time"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="time"

        app:layout_constraintTop_toBottomOf="@+id/new_recipe_form_name"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"
        app:layout_constraintBottom_toTopOf="@+id/new_recipe_form_spinner_difficulty"
        android:autofillHints="" />

    <TextView
        android:id="@+id/new_recipe_form_text_view_difficulties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty"

        android:textSize="18sp"

        app:layout_constraintTop_toBottomOf="@+id/new_recipe_form_time"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toStartOf="@+id/new_recipe_form_spinner_difficulty"
        app:layout_constraintBottom_toTopOf="@+id/new_recipe_form_for_number"
        />

    <Spinner
        android:id="@+id/new_recipe_form_spinner_difficulty"
        android:hint="@string/difficulty"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"

        app:layout_constraintTop_toBottomOf="@+id/new_recipe_form_time"
        app:layout_constraintStart_toEndOf="@+id/new_recipe_form_text_view_difficulties"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"
        app:layout_constraintBottom_toTopOf="@+id/new_recipe_form_for_number" />

    <EditText
        android:id="@+id/new_recipe_form_for_number"
        android:hint="@string/for_how_many_person"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        app:layout_constraintTop_toBottomOf="@+id/new_recipe_form_spinner_difficulty"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_new_recipe"
        android:autofillHints="" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_new_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"/>

    <Button
        android:id="@+id/new_recipe_form_button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/previous"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_new_recipe"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_new_recipe_start"
        app:layout_constraintEnd_toStartOf="@+id/new_recipe_form_button_validate"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/new_recipe_form_button_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/validate"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_new_recipe"
        app:layout_constraintStart_toEndOf="@+id/new_recipe_form_button_return"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_new_recipe_end"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>